<h1>Subtract the first number from the second number</h1>
<%= form_tag calc_dosubtract_path do %>
  <div>
  	<% flash.each do |name, msg|%>
  		<span> <%= msg %> </span>
  		<br/>
  	<% end %>
  </div>
	<table>
		<tr>
			<td>
				First Number
			</td>
			<td>
				<%= text_field_tag :firstNum %>
			</td>
		</tr>
		<tr>
			<td>
				Second Number
			</td>
			<td>
				<%= text_field_tag :secondNum %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<%= submit_tag ("Subtract") %>
			</td>
		</tr>
	</table>
<% end %>
<%= link_to "Back", root_path %>